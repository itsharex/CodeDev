{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "code-forge-ai",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
          "all": false,
          "http": {
            "all": true,
            "request": true,
            "scope": ["https://raw.githubusercontent.com/*", "https://gist.githubusercontent.com/*", "https://cdn.jsdelivr.net/*", "https://gitee.com/*"]
          },
          "fs": {
            "all": true,
            "scope": ["**"]
          },
          "path": {
            "all": true
          },
          "dialog": {
            "all": true
          },
          "clipboard": {
            "all": true
          },
          "shell": {
            "all": false,
            "open": true
          },
          "globalShortcut": {
            "all": true
          },
          "window": {
            "all": true
          }
        },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.codeforge.ai",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
          {
            "label": "main",
            "fullscreen": false,
            "height": 600,
            "resizable": true,
            "title": "CodeForge AI",
            "width": 800,
            "decorations": false,
            "center": true,
            "transparent": true,
            "visible": false
          },
          {
            "label": "spotlight",
            "title": "Spotlight",
            "width": 640,
            "height": 400, 
            "resizable": false,
            "fullscreen": false,
            "center": true,
            "decorations": false,
            "transparent": true,
            "alwaysOnTop": true,
            "visible": false,
            "skipTaskbar": true, 
            "focus": true
          }
        ]
  }
}
